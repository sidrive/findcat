<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/layout_item"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="8dp"
  android:layout_marginBottom="8dp"
  android:layout_marginEnd="16dp"
  android:layout_marginLeft="16dp"
  android:layout_marginRight="16dp"
  android:layout_marginStart="16dp">
    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="100dp">
        <ImageView
          android:layout_margin="2dp"
          android:src="@drawable/background_black_gradient"
          android:id="@+id/img_featured_image"
          android:layout_width="100dp"
          android:layout_height="match_parent"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:scaleType="centerCrop" />

        <ImageView
          android:id="@+id/img_arrow"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentEnd="true"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginRight="16dp"
          android:src="@drawable/ic_keyboard_arrow_right_white_48dp" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_toEndOf="@id/img_featured_image"
          android:layout_toLeftOf="@id/img_arrow"
          android:layout_toRightOf="@id/img_featured_image"
          android:layout_toStartOf="@id/img_arrow"
          android:orientation="vertical"
          android:padding="16dp">

            <TextView
              android:text="@string/app_name"
              android:id="@+id/text_name"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:ellipsize="end"
              android:maxLines="2"
              android:textColor="@android:color/black"
              android:textSize="14sp" />

            <TextView
              android:text="@string/app_name"
              android:id="@+id/text_date"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:ellipsize="end"
              android:textColor="@color/yellow"
              android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>